<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/notification_container"
        android:layout_width="300dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debug_topic"
        app:layout_constraintBottom_toTopOf="@+id/notification_container"
        app:layout_constraintEnd_toEndOf="@+id/notification_container"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/notification_container"
        app:layout_constraintTop_toBottomOf="@+id/notification_container" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/push_topic"
        app:layout_constraintBottom_toTopOf="@+id/notification_container"
        app:layout_constraintEnd_toEndOf="@+id/notification_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/notification_container"
        app:layout_constraintTop_toBottomOf="@+id/notification_container" />	
</android.support.constraint.ConstraintLayout>